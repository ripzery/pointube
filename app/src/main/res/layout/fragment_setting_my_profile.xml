<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/metFirstName"
            style="@style/BaseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/register_form_text_first_name_en"
            android:inputType="textPersonName" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/metLastName"
            style="@style/BaseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/register_form_text_last_name_en"
            android:inputType="textPersonName" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/metFirstNameTH"
            style="@style/BaseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/register_form_text_first_name_th"
            android:inputType="textPersonName" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/metLastNameTH"
            style="@style/BaseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/register_form_text_last_name_th"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/register_form_text_dob" />

        <TextView
            android:id="@+id/tvDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:freezesText="true"
            android:hint="@string/register_form_text_hint_dob" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/metCitizenID"
            style="@style/BaseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/register_form_text_citizen_id"
            android:inputType="number"
            android:maxLength="13"
            app:met_iconLeft="@null"
            app:met_maxCharacters="13" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/metPassport"
            style="@style/BaseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/register_form_text_passport"
            android:inputType="text"
            android:visibility="gone"
            app:met_minCharacters="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/register_form_text_gender" />

        <com.socket9.pointube.screens.register.ToggleViewGroup
            android:id="@+id/toggleGender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:leftText="@string/register_form_text_gender_male"
            app:rightText="@string/register_form_text_gender_female" />

        <Button
            android:id="@+id/btnChangePw"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:soundEffectsEnabled="true"
            android:text="@string/register_form_text_change_password"
            android:theme="@style/BaseButton.Amber" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:soundEffectsEnabled="true"
            android:text="@string/my_profile_btn_save"
            android:theme="@style/BaseButton.Teal" />

    </LinearLayout>

</ScrollView>