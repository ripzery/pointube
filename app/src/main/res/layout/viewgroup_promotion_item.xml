<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.socket9.pointube.customviews.OneOneImageView
        android:id="@+id/ivCover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:src="@drawable/world_ball"
        android:src="@drawable/world_ball"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/world_ball"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content title"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Content title"/>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Content description"
                tools:text="Content description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <com.socket9.pointube.screens.promotion.PromotionPriceViewGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:price="1,000"
                    app:currency="baht"
                    app:isCircleGrey="true"
                    app:showCurrency="true"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="4dp"
                    android:text=" + 1000 baht"
                    android:layout_gravity="center_vertical"
                    tools:text=" + 1000 Baht"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvDayLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:layout_marginTop="8dp"
                android:text="3 days left"
                tools:text="5 days left"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>