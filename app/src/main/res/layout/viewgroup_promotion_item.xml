<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#F5F5F5"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <com.socket9.pointube.customviews.OneOneImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:transitionName="ivCover"
            android:scaleType="centerCrop"
            tools:src="@drawable/world_ball"
            android:src="@drawable/world_ball"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civLogo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/world_ball"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content title"
                    android:maxLines="1"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/civLogo"
                    android:ellipsize="end"
                    tools:text="Content title"/>

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@id/tvTitle"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textSize="10sp"
                    android:layout_toRightOf="@id/civLogo"
                    android:layout_marginLeft="8dp"
                    android:text="Content description"
                    tools:text="Content description"/>

            </RelativeLayout>

            <com.socket9.pointube.screens.promotion.viewgroups.PromotionPriceSaleViewGroup
                android:id="@+id/promotionPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="44dp"
                app:saleCurrencyPromotion="baht"
                app:isShowExtraPrice="false"
                app:isSale="false"/>

            <TextView
                android:id="@+id/tvDayLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:layout_marginEnd="8dp"
                android:text="3 days left"
                tools:text="5 days left"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
