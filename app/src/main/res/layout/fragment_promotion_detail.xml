<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:layout_height="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.socket9.pointube.customviews.OneOneImageView
                android:id="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:minHeight="100dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    tools:src="@drawable/world_ball" />

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/BaseTextTerm.TextTermsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/civLogo"
                    android:maxLines="2"
                    android:textSize="20sp"
                    tools:text="The Terrace" />

                <TextView
                    android:id="@+id/tvBegin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tvTitle"
                    android:layout_below="@id/tvTitle"
                    android:layout_marginTop="8dp"
                    android:text="@string/promotion_detail_text_start" />

                <com.socket9.pointube.screens.promotion.viewgroups.PromotionPriceSaleViewGroup
                    android:id="@+id/promotionPriceSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tvBegin"
                    android:layout_below="@id/tvBegin"
                    android:layout_marginTop="16dp"
                    app:saleCurrencyPromotion="baht" />

                <TextView
                    android:id="@+id/tvDayLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/promotionPriceSale"
                    android:layout_below="@id/promotionPriceSale"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/colorRed"
                    android:textSize="18sp"
                    tools:text="3 days left" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvDescription"
                style="@style/BaseTextTerm.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Description" />

            <TextView
                style="@style/BaseTextTerm.TextTermsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotion_detail_text_point" />


            <TextView
                android:id="@+id/tvPoint"
                style="@style/BaseTextTerm.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="400 Points" />


            <LinearLayout
                android:id="@+id/layoutSpecialPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/BaseTextTerm.TextTermsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promotion_detail_text_special_point" />


                <TextView
                    android:id="@+id/tvSpecialPoint"
                    style="@style/BaseTextTerm.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="400 Points" />

            </LinearLayout>

            <TextView
                style="@style/BaseTextTerm.TextTermsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotion_detail_text_promotion_period" />


            <TextView
                android:id="@+id/tvPeriod"
                style="@style/BaseTextTerm.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="13/Jun/2016 - 31/Jul/2016" />

            <LinearLayout
                android:id="@+id/layoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/BaseTextTerm.TextTermsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promotion_detail_text_time" />


                <TextView
                    android:id="@+id/tvTime"
                    style="@style/BaseTextTerm.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Time" />
            </LinearLayout>

            <TextView
                style="@style/BaseTextTerm.TextTermsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotion_detail_text_channel" />


            <TextView
                android:id="@+id/tvChannel"
                style="@style/BaseTextTerm.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="USSD" />


            <TextView
                style="@style/BaseTextTerm.TextTermsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotion_detail_text_how_to_redeem" />


            <TextView
                android:id="@+id/tvHowTo"
                style="@style/BaseTextTerm.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ระบบ USSD *770" />

            <LinearLayout
                android:id="@+id/layoutPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/BaseTextTerm.TextTermsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promotion_detail_text_place" />

                <TextView
                    android:id="@+id/tvPlace"
                    style="@style/BaseTextTerm.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Socket9 Ltd." />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/BaseTextTerm.TextTermsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promotion_detail_text_url" />


                <TextView
                    android:id="@+id/tvUrl"
                    style="@style/BaseTextTerm.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="http://ripzery.com" />

            </LinearLayout>

            <TextView
                style="@style/BaseTextTerm.TextTermsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotion_detail_text_term_and_condition" />


            <TextView
                android:id="@+id/tvTerm"
                style="@style/BaseTextTerm.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1. สามารถแลกคะแนนได้ 1 ครั้ง / 1 ใบเสร็จเท่านั้น\n2. ใช้สิทธิ์บลาบลา" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
