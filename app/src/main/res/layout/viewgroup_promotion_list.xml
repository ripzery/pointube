<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.socket9.pointube.customviews.OneOneHeightImageView
                android:id="@+id/ivLogo"
                android:layout_width="0dp"
                android:layout_height="80dp"
                tools:src="@drawable/world_ball" />

            <com.socket9.pointube.screens.promotion.viewgroups.PromotionPriceViewGroup
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                style="BaseTextTerm.TextTermsTitle"
                android:textSize="18sp"
                tools:text="The one card" />

            <TextView
                android:id="@+id/tvPromotionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                tools:text="พิเศษ The 1 card เพียง" />

        </LinearLayout>


        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            tools:text="4,123" />

    </LinearLayout>

</android.support.v7.widget.CardView>

