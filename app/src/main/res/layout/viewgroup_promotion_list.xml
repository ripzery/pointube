<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.socket9.pointube.customviews.OneOneHeightImageView
                android:id="@+id/ivLogo"
                android:layout_width="0dp"
                android:layout_height="144dp"
                android:scaleType="centerCrop"
                android:src="@drawable/world_ball"
                tools:src="@drawable/world_ball" />

            <com.socket9.pointube.screens.promotion.viewgroups.PromotionPriceViewGroup
                android:id="@+id/promotionPrice"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                app:currency="@string/viewgroup_promotion_list_points"
                app:price="1000"
                app:unitTextSize="8sp"
                app:valueTextSize="10sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBrandName"
                style="BaseTextTerm.TextTermsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                tools:text="The one card" />

            <TextView
                android:id="@+id/tvPromotionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="12sp"
                tools:text="พิเศษ The 1 card เพียง" />

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:text="@string/viewgroup_promotion_list_read_more" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

