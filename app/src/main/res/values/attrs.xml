<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleFrameLayout">
        <attr name="isGrey" format="boolean">false</attr>
    </declare-styleable>

    <declare-styleable name="PromotionPriceViewGroup">
        <attr name="showCurrency" format="boolean">true</attr>
        <attr name="currency" format="string">baht</attr>
        <attr name="price" format="string">1,000</attr>
        <attr name="isCircleGrey" format="boolean">false</attr>
        <attr name="maxLines" format="integer">1</attr>
    </declare-styleable>

    <declare-styleable name="PromotionItemViewGroup">
        <attr name="currencyPromotion" format="string">baht</attr>
        <attr name="salePricePromotion" format="string">1,000</attr>
        <attr name="originalPricePromotion" format="string">1,000</attr>
        <attr name="isShowDayLeft" format="boolean">false</attr>
        <attr name="isShowExtraPriceSale" format="boolean">false</attr>
    </declare-styleable>

    <declare-styleable name="PromotionPriceSaleViewGroup">
        <attr name="isSale" format="boolean">false</attr>
        <attr name="isShowExtraPrice" format="boolean">false</attr>
        <attr name="saleCurrencyPromotion" format="string">baht</attr>
    </declare-styleable>

    <declare-styleable name="ToggleViewGroup">
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
    </declare-styleable>

    <declare-styleable name="TintableImageView">
        <attr name="tint" format="reference|color"/>
    </declare-styleable>
</resources>